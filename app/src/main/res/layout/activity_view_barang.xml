<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:layout_marginBottom="5dp">
<LinearLayout
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    tools:context="phantomshadow.example.com.kedaikeun.ui.ViewBarang">

    <LinearLayout
        android:id="@+id/itemRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="8">
        <ImageView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/food"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/textNamaBarang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Barang"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textTakaranBarang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Takaran"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textHargaBarang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonPlus"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="+"
                android:textColor="#fff"
                android:background="@color/colorAccent"
                android:focusable="false"
                android:textAllCaps="false"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/jmlhItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonMin"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#fff"
                android:background="@color/colorAccent"
                android:text="-"
                android:textAllCaps="false"
                android:focusable="false"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#358cc6">
    </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>